public class Wario extends Person
{
    public Wario(String n, int range, int spd, int hlth, int pwr, int prio) {
        super(n, range, spd, hlth, pwr, prio);
    }

    public void attack(Enemy b) {
        super.delay(1000);
        b.setHealth(b.getHealth() - power);
        System.out.print("Wario cries out in confusion for " + power + " damage!");
        if (b.isAlive() == true) {
            System.out.println(" " + b.getName() + " has " + b.getHealth() + " health!");
        } else {
            System.out.println(" " + b.getName() + " has contracted genital warts (the bad kind) and died!");
        }
    }

    public int move(int distance) {
        this.delay(1000);
        System.out.println("\nWario hobbles forward " + speed + " units!");
        distance -= speed;
        return distance;
    }

    public boolean flee(Enemy b) {
        System.out.println("\n");
        super.delay(1000);
        if(speed>=b.getSpeed()) {
            System.out.println(name + " escaped from battle!\n");
            super.delay(1000);
            return true;
        } else {
            System.out.println(name + " was too slow to escape from battle!\n");
            super.delay(1000);
            return false;
        }
    }
}
