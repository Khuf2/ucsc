public abstract class Person {
    int attack_range;
    int speed;
    int health;
    int power;
    int priority;
    int maxHealth;
    int specialTimer = 0;
    String name;

    public Person(String n, int range, int spd, int hlth, int pwr, int prio) {
        attack_range = range;
        speed = spd;
        name = n;
        health = hlth;
        power = pwr;
        priority = prio;
        maxHealth = hlth;
    }

    public void delay(int d) {
        try
        {
            Thread.sleep(d);
        }
        catch(InterruptedException ex)
        {
            Thread.currentThread().interrupt();
        }
    }

    public boolean isAlive() {
        if(health>0) {
            return true;
        } else {
            return false;
        }
    }

    public abstract void attack(Enemy b);

    public abstract int move(int distance);

    /*public void profile() {
        this.delay(1000);
        System.out.println("\nName: " + name + "\nRange: " + attack_range +  "\nSpeed: " + speed + "\nHealth: " + health + "\nPower: " + power + "\nPriority: " + priority);
    }
    */

    public abstract boolean flee(Enemy b);

    public void getBattleStats() {
        System.out.println(name + " (" + specialTimer + ") " + health + "/" + maxHealth);
    }

    public int getAttack_range() {
        return attack_range;
    }

    public String getName() {
        return name;
    }

    public int getSpeed() { return speed; }

    public int getHealth() {return health;}

    public int getPower() {return power;}

    public int getPriority() {return priority;}

    public void setHealth(int h) {
        health = h;
    }
    public int getMaxHealth() {return maxHealth;}

    public void setMaxHealth(int h) {
        maxHealth = h;
    }

    public int getAttackRange() {
        return attack_range;
    }
}
