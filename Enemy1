public abstract class Enemy {
    int health;
    int power;
    int speed;
    String name;
    int specialTimer;
    int priority;
    int lvl;
    int maxHealth;

    public void Enemy(String name, int health, int pwr, int spd, int specialTimer, int priority, int lvl) {
        this.name = name;
        this.health = health;
        this.power = pwr;
        this.speed = spd;
        this.name = name;
        this.specialTimer = specialTimer;
        this.priority = priority;
        this.lvl = lvl;
        this.maxHealth = health;

    }
    public void getBattleStats() {
        System.out.println(name + " (" + specialTimer + ") " + health + "/" + maxHealth);
    }

    public abstract void move();
    
    public abstract void attack();
    
    public int getSpeed() {
        return speed;
    }
}
